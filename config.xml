<?xml version='1.0' encoding='utf-8'?>
<widget id="com.oztemur.howcrowd" version="0.1.0" xmlns:gap="http://phonegap.com/ns/1.0" xmlns="http://www.w3.org/ns/widgets">
  <name>HowCrowd</name>
  <description>
    HowCrowd is an application that provides how places are crowded.
  </description>
  <author email="support@howcrowdapp.com" href="http://howcrowdapp.com">
    Mahmut Oztemur
  </author>
  <content src="index.html"/>

  <preference name="permissions" value="none"/>
  <preference name="orientation" value="default"/>
  <preference name="target-device" value="universal"/>
  <!-- <preference name="fullscreen" value="true"/> -->
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="AndroidPersistentFileLocation" value="Compatibility"/>

  <!-- <icon src="icon.png"/> -->
  <icon density="ldpi" platform="android" src="www/res/icon/android/icon-36-ldpi.png"/>
  <icon density="mdpi" platform="android" src="www/res/icon/android/icon-48-mdpi.png"/>
  <icon density="hdpi" platform="android" src="www/res/icon/android/icon-72-hdpi.png"/>
  <icon density="xhdpi" platform="android" src="www/res/icon/android/icon-96-xhdpi.png"/>
  <icon density="xhdpi" platform="android" src="www/res/icon/android/icon-96-xhdpi.png"/>
  <icon density="xxhdpi" platform="android" src="www/res/icon/android/icon-144-xxhdpi.png"/>
  <icon density="xxxhdpi" platform="android" src="www/res/icon/android/icon-192-xxxhdpi.png"/>
  <icon platform="blackberry" src="www/res/icon/blackberry/icon-80.png"/>
  <icon platform="blackberry" state="hover" src="www/res/icon/blackberry/icon-80.png"/>
  <icon platform="ios" height="57" src="www/res/icon/ios/icon-57.png" width="57"/>
  <icon platform="ios" height="72" src="www/res/icon/ios/icon-72.png" width="72"/>
  <icon platform="ios" height="114" src="www/res/icon/ios/icon-57-2x.png" width="114"/>
  <icon platform="ios" height="144" src="www/res/icon/ios/icon-72-2x.png" width="144"/>
  <icon platform="webos" src="www/res/icon/webos/icon-64.png"/>
  <icon platform="winphone" src="www/res/icon/windows-phone/icon-48.png"/>
  <icon platform="winphone" role="background" src="www/res/icon/windows-phone/icon-173-tile.png"/>

  <splash platform="android" density="port-ldpi" src="www/res/screen/android/screen-ldpi-portrait.png"/>
  <splash platform="android" density="port-mdpi" src="www/res/screen/android/screen-mdpi-portrait.png"/>
  <splash platform="android" density="port-hdpi" src="www/res/screen/android/screen-hdpi-portrait.png"/>
  <splash platform="android" density="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png"/>
  <splash platform="ios" height="480" src="www/res/screen/ios/screen-iphone-portrait.png" width="320"/>
  <splash platform="ios" height="960" src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640"/>
  <splash platform="ios" height="1136" src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640"/>
  <splash platform="ios" height="1024" src="www/res/screen/ios/screen-ipad-portrait.png" width="768"/>
  <splash platform="ios" height="768" src="www/res/screen/ios/screen-ipad-landscape.png" width="1024"/>

  <access origin="*"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>

  <allow-navigation href="http://*/*" />
  
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>
